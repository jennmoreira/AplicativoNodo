<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ErroLogin">
    
    <TextView
        android:id="@+id/txtErroLogin"
        android:textSize="50sp"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:text="Erro Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp"/>
    <TextView
        android:id="@+id/txtVerifique"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="Verifique seus dados e tente novamente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtErroLogin"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textStyle="bold"
        android:backgroundTint="@color/bluelight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtVerifique"
        android:layout_marginTop="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>