<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <View
        android:id="@+id/view_space_2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0" />

    <TextView
        android:id="@+id/textUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Olá, usuário"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view_space_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0" />


    <Button
        android:id="@+id/btnEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Perfil"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sobre o Aplicativo"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_privacy_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configurações de Privacidade"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_help_faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajuda e Perguntas Frequentes"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sair da Conta"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@android:color/white"/>

</LinearLayout>